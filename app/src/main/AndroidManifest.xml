
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bbl.intl.bambulab.com">

    <!-- Required permissions for IOTC functionality -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name="bbl.intl.bambulab.com.BambuLabApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Bambu Handy"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:largeHeap="true">

        

        <activity
            android:name="bbl.intl.bambulab.com.MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Camera activity for printer monitoring -->
        <activity
            android:name="bbl.intl.bambulab.com.CameraActivity"
            android:exported="false"
            android:screenOrientation="landscape" />

        <!-- Device list activity -->
        <activity
            android:name="bbl.intl.bambulab.com.DeviceListActivity"
            android:exported="false"
            android:parentActivityName="bbl.intl.bambulab.com.MainActivity" />

        <!-- Settings activity -->
        <activity
            android:name="bbl.intl.bambulab.com.SettingsActivity"
            android:exported="false"
            android:parentActivityName="bbl.intl.bambulab.com.MainActivity" />

        <!-- File provider for sharing files -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="bbl.intl.bambulab.com.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
